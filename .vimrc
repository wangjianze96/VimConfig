set nocompatible
filetype off

syntax on
set number
set ruler
set tabstop=4 softtabstop=4
set shiftwidth=4
set hlsearch
set incsearch
set showcmd
set noswapfile
set nowrap
set encoding=utf-8
" statusline config
set statusline=
set statusline+=\ %F
set statusline+=\ %m
set statusline+=%=
set statusline+=%y
set statusline+=\ %p%%
set statueline+=\ Ln\ %l\ Col\ %c\ 
set laststatus=2
